<div class="thumbnail">
  <%= link_to image_tag(shop.cover_image.photo.url(:large)), shop if shop.cover_image %>
  <div class="caption">
    <h4><%= shop.name %></h4>
    <p class="text-muted">地址：<%= shop.addr %></p>
    <p class="text-muted">电话：<%= shop.tel %></p>
    <p class="text-muted">人均：<span class="price_color">￥<%= shop.price_avg %></span></p>
  </div>
</div>