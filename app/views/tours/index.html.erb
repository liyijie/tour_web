<h1>Listing tours</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Sub title</th>
      <th>Addr</th>
      <th>Price</th>
      <th>Work range</th>
      <th>Hint</th>
      <th>Desc</th>
      <th>Traffic</th>
      <th>Seq</th>
      <th>Position</th>
      <th>Lon</th>
      <th>Lat</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.title %></td>
        <td><%= tour.sub_title %></td>
        <td><%= tour.addr %></td>
        <td><%= tour.price %></td>
        <td><%= tour.work_range %></td>
        <td><%= tour.hint %></td>
        <td><%= tour.desc %></td>
        <td><%= tour.traffic %></td>
        <td><%= tour.seq %></td>
        <td><%= tour.position %></td>
        <td><%= tour.lon %></td>
        <td><%= tour.lat %></td>
        <td><%= tour.city %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

