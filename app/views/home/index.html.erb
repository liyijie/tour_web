<div class="container">
  <div class="row mt">
    <div class="col-md-4">
      <%= render "index_query" %>
    </div>
    <div class="col-md-8">
      <div id="carousel-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-generic" data-slide-to="1"></li>
          <li data-target="#carousel-generic" data-slide-to="2"></li>
          <li data-target="#carousel-generic" data-slide-to="3"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <%= image_tag "index-ad1.png" %>
            <div class="carousel-caption">
            </div>
          </div>
          <div class="item">
            <%= image_tag "index-ad2.png" %>
            <div class="carousel-caption">
            </div>
          </div>
          <div class="item">
            <%= image_tag "index-ad3.png" %>
            <div class="carousel-caption">
            </div>
          </div>
          <div class="item">
            <%= image_tag "index-ad4.png" %>
            <div class="carousel-caption">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-9 col-md-8">
      <div class="home_title">热门景点<span class="caret clearfix"></span></div>
      <div class="row">
        <div class="col-lg-4 col-md-5 tour-big">
          <%= render partial: "share/tour_big_thumbnail", locals: {tour: @tours[0]} if @tours[0] %>
        </div>
        <div class="col-lg-8 col-md-7 no-space">
          <% (1..2).each do |row_index| %>
              <% (1..3).each do |col_index| %>
                <% tour = @tours[row_index*col_index] %>
                <div class="col-lg-4 col-md-6 padding-5"><%= render partial: "share/tour_thumbnail", locals: {tour: tour} if tour %></div>
              <% end %>  
          <% end %>
        </div>
      </div>    
    </div>
  </div>
  
  <% @categories.each_with_index do |category, index| %>
    <%= raw '<div class="row">' if index % 2 == 0 %>
      <div class="col-md-6">
        <div class="box">
          <%= link_to image_tag(category.cover_image.photo.url), category, class: "default" %>
        </div>
      </div>
    <%= raw '</div>' if index % 2 == 1 %>
  <% end %>
</div>
<div class="container index-theme">
  <div class="title_line">热门城市</div>
  <% @cities.each_with_index do |city, index| %>
    <%= raw '<div class="row">' if index % 3 == 0 %>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= link_to image_tag(city.cover_image.photo.url), city, lazy: true %>
          <div class="caption">
            <!-- <p><%= city.desc %></p> -->
            <%= truncate_html(city.desc, length: 80, omission: '...') %>
          </div>
        </div>
      </div>
    <%= raw '</div>' if index % 3 == 2 %>
  <% end %>
</div>

